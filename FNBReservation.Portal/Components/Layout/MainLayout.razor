@inherits LayoutComponentBase
@using MudBlazor
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Style="top: 0; height: 100%; padding-top: 0">
    <NavMenu></NavMenu>
</MudDrawer>
<MudLayout>
    <MudMainContent Style="padding-top: 0">
        <MudContainer MaxWidth="MaxWidth.Large" Class="p-0">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    private bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}