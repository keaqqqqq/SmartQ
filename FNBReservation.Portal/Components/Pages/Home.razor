@page "/idk"
@using FNBReservation.Portal.Models
@using FNBReservation.Portal.Components.Dialogs
@using FNBReservation.Portal.Services
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject IStaffService StaffService
@rendermode InteractiveServer
@inject IJSRuntime JS

<head>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</head>

<MudButton OnClick="LogSomething">Log to Console</MudButton>
<MudButton OnClick="LogWarning" Color="Color.Warning">Log Warning</MudButton>
<MudButton OnClick="LogError" Color="Color.Error">Log Error</MudButton>
<MudButton OnClick="LogObject" Color="Color.Info">Log Object</MudButton>

@code {
    async Task LogSomething()
    {
        await JS.InvokeVoidAsync("console.log", "Hello from MudBlazor!");
    }

    async Task LogWarning()
    {
        await JS.InvokeVoidAsync("console.warn", "This is a warning message");
    }

    async Task LogError()
    {
        await JS.InvokeVoidAsync("console.error", "This is an error message");
    }

    async Task LogObject()
    {
        var testObject = new
        {
            Name = "Test Object",
            Value = 42,
            IsWorking = true
        };
        
        await JS.InvokeVoidAsync("console.log", "Object example:", testObject);
    }
}