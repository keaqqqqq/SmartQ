    public async ValueTask DisposeAsync()
    {
        if (_jsModule != null)
        {
            try
            {
                await _jsModule.DisposeAsync();
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("console.error", $"Error disposing JS module: {ex.Message}");
            }
        }
    }
}